<h1>Listing jokes</h1>

<table class="table table-striped">
  <tr>
    <th>Joke</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jokes.each do |joke| %>
  <tr>
    <td><%= joke.joke %></td>
    <td><%= joke.user %></td>
    <td><%= link_to 'Show', joke, :class => "btn" %></td>
    <td><%= link_to 'Edit', edit_joke_path(joke), :class => "btn" %></td>
    <td><%= link_to 'Destroy', joke, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Joke', new_joke_path, :class => "btn" %>
